<% include ./partials/header %>


<div id="wrapper" data-stellar-background-ratio="0.5">
  <div class="ui raised very padded text container inverted segment" id="opacity">
    <h1 id="completed" class="ui header">Mental Health in Tech Survey</h1>
    <br>

    <form action="/userform" method="POST" class="ui inverted form" >
      <h3 class="ui dividing header color">Demographics</h3>

      <div class="field">
        <div class="two fields">
          <div class="field">
            <label>Age</label>
            <input maxlength="2" type="text" name="age" placeholder="Age" id="age">
          </div>
      
          <div class="field">
            <label>Gender</label>
            <div class="ui selection dropdown" id="gender">
              <input type="hidden" name="gender">
              <i class="dropdown icon"></i>
              <div class="default text">Gender</div>
                <div class="menu">
                  <div class="item" data-value="Male">Male</div>
                  <div class="item" data-value="Female">Female</div>
                </div>
               </div>
            </div>
          </div>
        </div>

        <div class="two fields">
          <div class="field">
            <label>State</label>

            <select class="ui search selection dropdown" name="state" id="state" placeholder="state">
              <option value="">State</option>
              <option value="AL">Alabama</option>
              <option value="AK">Alaska</option>
              <option value="AZ">Arizona</option>
              <option value="AR">Arkansas</option>
              <option value="CA">California</option>
              <option value="CO">Colorado</option>
              <option value="CT">Connecticut</option>
              <option value="DE">Delaware</option>
              <option value="DC">District Of Columbia</option>
              <option value="FL">Florida</option>
              <option value="GA">Georgia</option>
              <option value="HI">Hawaii</option>
              <option value="ID">Idaho</option>
              <option value="IL">Illinois</option>
              <option value="IN">Indiana</option>
              <option value="IA">Iowa</option>
              <option value="KS">Kansas</option>
              <option value="KY">Kentucky</option>
              <option value="LA">Louisiana</option>
              <option value="ME">Maine</option>
              <option value="MD">Maryland</option>
              <option value="MA">Massachusetts</option>
              <option value="MI">Michigan</option>
              <option value="MN">Minnesota</option>
              <option value="MS">Mississippi</option>
              <option value="MO">Missouri</option>
              <option value="MT">Montana</option>
              <option value="NE">Nebraska</option>
              <option value="NV">Nevada</option>
              <option value="NH">New Hampshire</option>
              <option value="NJ">New Jersey</option>
              <option value="NM">New Mexico</option>
              <option value="NY">New York</option>
              <option value="NC">North Carolina</option>
              <option value="ND">North Dakota</option>
              <option value="OH">Ohio</option>
              <option value="OK">Oklahoma</option>
              <option value="OR">Oregon</option>
              <option value="PA">Pennsylvania</option>
              <option value="RI">Rhode Island</option>
              <option value="SC">South Carolina</option>
              <option value="SD">South Dakota</option>
              <option value="TN">Tennessee</option>
              <option value="TX">Texas</option>
              <option value="UT">Utah</option>
              <option value="VT">Vermont</option>
              <option value="VA">Virginia</option>
              <option value="WA">Washington</option>
              <option value="WV">West Virginia</option>
              <option value="WI">Wisconsin</option>
              <option value="WY">Wyoming</option>
           </select>
          </div>
        </div>

        <h3 class="ui dividing header">History</h3>
   
        <div class="field">
          <label>Are you Self-Employed?</label>
          <div class="ui selection dropdown" id="self_employed">
            <input type="hidden" name="self_employed">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                </div>
              </div>
          </div>
      
        <div class="field">
          <label>Do you have a family history of mental illness?</label>
          <div class="ui selection dropdown" id="family_history">
            <input type="hidden" name="family_history">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                </div>
              </div>
          </div>
        
        <div class="field">
          <label>Do you have a family history of mental illness?</label>
          <div class="ui selection dropdown" id="treatment">
            <input type="hidden" name="treatment">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                </div>
              </div>
          </div>
      
        <div class="field">
          <label>If you have a mental health condition,do you feel that it interferes with your work?</label>
          <div class="ui selection dropdown" id="work_interfere">
            <input type="hidden" name="work_interfere">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Rarely">Rarely</div>
                  <div class="item" data-value="Never">Never</div>
                    <div class="item" data-value="Sometimes">Sometimes</div>
                    <div class="item" data-value="NA">N/A</div>
                </div>
              </div>
          </div>
      
        <div class="field">
          <label>How many employees does your company or organization have?</label>
          <div class="ui selection dropdown" id="no_employees">
            <input type="hidden" name="no_employees">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="1-5">1-5</div>
                  <div class="item" data-value="6-25">6-25</div>
                  <div class="item" data-value="26-99">26-99</div>
                  <div class="item" data-value="100-500">100-500</div>
                </div>
              </div>
          </div>
      
        <div class="field">
          <label>Do you work remotely (outside of an office) at least 50% of the time?</label>
          <div class="ui selection dropdown" id="remote_work">
            <input type="hidden" name="remote_work">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                </div>
              </div>
          </div>

        <div class="field">
          <label>Is your company considered a "Tech" company/organization?</label>
          <div class="ui selection dropdown" id="tech_company">
            <input type="hidden" name="tech_company">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                </div>
              </div>
          </div>

        <div class="field">
          <label>Does your employer provide mental health benefits?</label>
          <div class="ui selection dropdown" id="benefits">
            <input type="hidden" name="benefits">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                  <div class="item" data-value="Don't know">Don't know</div>
                </div>
              </div>
          </div>
       
        <div class="field">
          <label> Do you know the options for mental health care your employer provides?</label>
          <div class="ui selection dropdown" id="care_options">
            <input type="hidden" name="care_options">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                  <div class="item" data-value="Don't know">Don't know</div>
                </div>
              </div>
          </div>
           
        <div class="field">
          <label>Has your employer ever discussed mental health as part of an employee wellness program?</label>
          <div class="ui selection dropdown" id="wellness_program">
            <input type="hidden" name="wellness_program">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                  <div class="item" data-value="Don't know">Don't know</div>
                </div>
              </div>
          </div>

        <div class="field">
          <label>Does your employer provide resources to learn more about mental health issues and how to seek help?</label>
          <div class="ui selection dropdown" id="seek_help">
            <input type="hidden" name="seek_help">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                  <div class="item" data-value="Don't know">Don't know</div>
                </div>
              </div>
          </div>
           
        <div class="field">
          <label>Is your anonymity protected if you choose to take advantage of mental health or substance abuse treatment resources?</label>
          <div class="ui selection dropdown" id="anonymity">
            <input type="hidden" name="anonymity">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                 <div class="item" data-value="Don't know">Don't know</div>
                </div>
              </div>
          </div>

        <div class="field">
          <label>How easy is it for you to take medical leave for a mental health condition?</label>
          <div class="ui selection dropdown" id="leave">
            <input type="hidden" name="leave">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Somewhat difficult">Somewhat difficult</div>
                  <div class="item" data-value="Somewhat easy">Somewhat easy</div>
                  <div class="item" data-value="Very easy">Very easy</div>
                  <div class="item" data-value="Don't know">Don't know</div>
                </div>
              </div>
          </div>

        <div class="field">
          <label>Do you think that discussing a mental health issue with your employer would have negative consequences?</label>
          <div class="ui selection dropdown" id="mental_health_consequence">
            <input type="hidden" name="mental_health_consequence">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                  <div class="item" data-value="Maybe">Maybe</div>
                </div>
              </div>
          </div>

        <div class="field">
          <label>Do you think that discussing a physical health issue with your employer would have negative consequences?</label>
          <div class="ui selection dropdown" id="phys_health_consequence">
            <input type="hidden" name="phys_health_consequence">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                  <div class="item" data-value="Maybe">Maybe</div>
                </div>
              </div>
          </div>

        <div class="field">
          <label>Would you be willing to discuss a mental health issue with your coworkers?</label>
          <div class="ui selection dropdown" id="coworkers">
            <input type="hidden" name="coworkers">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                  <div class="item" data-value="Some of them">Some of them</div>
                </div>
              </div>
          </div>

        <div class="field">
          <label>Would you be willing to discuss a mental health issue with your direct supervisor(s)?</label>
          <div class="ui selection dropdown" id="supervisor">
            <input type="hidden" name="supervisor">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                   <div class="item" data-value="Some of them">Some of them</div>
                </div>
              </div>
          </div>


        <div class="field">
          <label>Would you bring up a mental health issue with a potential employer in an interview?</label>
          <div class="ui selection dropdown" id="mental_health_interview">
            <input type="hidden" name="mental_health_interview">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                  <div class="item" data-value="Don't know">Don't know</div>
                </div>
              </div>
          </div>

        <div class="field">
          <label>Would you bring up a physical health issue with a potential employer in an interview?</label>
          <div class="ui selection dropdown" id="phys_health_interview">
            <input type="hidden" name="phys_health_interview">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                    <div class="item" data-value="Maybe">Maybe</div>
                </div>
              </div>
          </div>

        <div class="field">
          <label> Do you feel that your employer takes mental health as seriously as physical health?</label>
          <div class="ui selection dropdown" id="mental_vs_physical">
            <input type="hidden" name="mental_vs_physical">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                  <div class="item" data-value="Don't know">Don't know</div>
                </div>
              </div>
          </div>

        <div class="field">
          <label> Have you heard of or observed negative consequences for coworkers with mental health conditions in your workplace?</label>
          <div class="ui selection dropdown" id="obs_consequence">
            <input type="hidden" name="obs_consequence">
              <i class="dropdown icon"></i>
              <div class="default text">Select</div>
                <div class="menu">
                  <div class="item" data-value="Yes">Yes</div>
                  <div class="item" data-value="No">No</div>
                </div>
              </div>
          </div>

        <button class="ui blue submit button" id="submit" tabindex="0">Submit</button>
        <div class="ui error message"></div>

      </div>
    </form>
  </div>


  <div class="ui basic modal">
    <i class="close icon"></i>
      <div class="header">Success!</div>
      <div class="image content">
        <div class="image">
          <i class="checkmark box icon"></i>
        </div>
        <div class="description">
          <p>Thank you for filling out the survey!</p>
        </div>
      </div>
      <div class="actions">
        <div class="one fluid ui inverted buttons" id="success">
          <div class="ui ok blue basic inverted button">
            <i class="checkmark icon"></i>
            Close
          </div>
        </div>
      </div>
    </div>
</div>

